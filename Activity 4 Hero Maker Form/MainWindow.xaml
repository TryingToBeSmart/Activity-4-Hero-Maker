<Window x:Class="Activity_4_Hero_Maker_Form.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Activity_4_Hero_Maker_Form"
        mc:Ignorable="d"
        Title="Hero Maker" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Abilities" Grid.Row="0">
            <UniformGrid Rows="4" Columns="2" Margin="5">
                <CheckBox HorizontalAlignment="Left" Content="Super Strength"/>
                <CheckBox HorizontalAlignment="Left" Content="Absorb Energy"/>
                <CheckBox HorizontalAlignment="Left" Content="Fly"/>
                <CheckBox HorizontalAlignment="Left" Content="Telepathy"/>
                <CheckBox HorizontalAlignment="Left" Content="xRay Vision"/>
                <CheckBox HorizontalAlignment="Left" Content="Extreme Luck"/>
                <CheckBox HorizontalAlignment="Left" Content="Invisibility"/>
            </UniformGrid>
        </GroupBox>
    </Grid>
</Window>
